<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:id="@+id/set_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        android:layout_gravity="center"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_repeat_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/set_repeat_input"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:inputType="number"
            android:lines="1"
            android:nextFocusRight="@id/set_weight_input"
            android:imeOptions="actionNext"
            android:text="54"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_weight_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/set_weight_input"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:inputType="numberDecimal"
            android:imeOptions="actionDone"
            android:text="541"
            />
        <ImageView
            android:id="@+id/set_confirm"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            />

        <ImageView
            android:id="@+id/set_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit_24dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            />

        <ImageView
            android:id="@+id/set_remove"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:src="@drawable/ic_remove_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>

</LinearLayout>